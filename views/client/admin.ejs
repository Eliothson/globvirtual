<%-include ('header')-%>


	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap text-center" style="text-align: center;">
		<div class="container text-center">
			<br><br><br>
			<div class="row text-center">
				
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Connectez-vous Administrateur</h3>
						<form class="row login_form" action="/admin" method="POST" >
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" id="name" name="pseudo" placeholder="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Pseudo'">
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" id="name" name="pwd" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
							</div>
							<div class="col-md-12 form-group">
								<div class="creat_account">
									<input type="checkbox" id="f-option2" name="selector">
									<label for="f-option2">Toujours Connectez?</label>
								</div>
							</div>
							<div class="col-md-12 form-group">
								<button type="submit" class="primary-btn">Connection</button>
								<a href="#">Mot de passe Oubliez??</a>
							</div>
						</form>
					</div>
				</div>
				<div class="col-lg-6">
					<br><br><br>
						<img src="/assets/img/adminimage.png" alt="">
				
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->

<%-include ('footer')-%>